{
  "name": "arxsbot",
  "version": "0.1.0",
  "private": true,
  "description": "ArxsBot mono-repo root: backend, tools, and webui",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "node --enable-source-maps dist/index.cjs",
    "build": "tsc -p tsconfig.json",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint . --fix",
    "format": "pnpm exec prettier . --write"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "tsx": "^4.0.2",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ws": "^8.18.3",
    "yaml": "^2.4.1",
    "zod": "^3.23.8"
  }
}
